set editing-mode vi
set keymap vi
set show-mode-in-prompt on
set vi-ins-mode-string "\1\e[1;0m\2[+] \1\e[0m\2"
set vi-cmd-mode-string "\1\e[1;0m\2[:] \1\e[0m\2"

